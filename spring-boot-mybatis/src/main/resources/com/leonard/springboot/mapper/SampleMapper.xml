<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leonard.springboot.mapper.SampleMapper">

    <parameterMap id="Sample" type="com.leonard.springboot.domain.Sample"/>

    <resultMap id="BaseResultMap" type="com.leonard.springboot.domain.Sample">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name
    </sql>

    <select id="selectSampleById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        Sample where id = #{id}
    </select>

    <select id="selectSampleList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        Sample
    </select>

</mapper>
